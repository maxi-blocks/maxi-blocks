{
	" .maxi-container-arrow .maxi-container-arrow--content": {
		"arrow": {
			"general": {
				"display": "block",
				"width": "3px",
				"height": "3px",
				"left": "2%",
				"top": "-2px"
			},
			"xxl": {
				"display": "block",
				"width": "1px",
				"height": "1px",
				"left": "4%",
				"top": "-0px"
			},
			"xl": {
				"display": "block",
				"width": "3px",
				"height": "3px",
				"left": "2%",
				"top": "-2px"
			},
			"l": {
				"display": "none",
				"width": "1px",
				"height": "1px",
				"left": "4%",
				"top": "-0px"
			},
			"m": {
				"display": "none",
				"width": "3px",
				"height": "3px",
				"left": "2%",
				"top": "calc(100% + 3px)"
			},
			"s": {
				"display": "block",
				"width": "1px",
				"height": "1px",
				"left": "4%",
				"top": "calc(100% + 1px)"
			},
			"xs": {
				"display": "block",
				"width": "3px",
				"height": "3px",
				"left": "2%",
				"top": "calc(100% + 3px)"
			}
		}
	},
