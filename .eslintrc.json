{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:@wordpress/eslint-plugin/recommended",
        "plugin:react/recommended",
        "airbnb",
        "plugin:prettier/recommended",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["react", "import"],
    "rules": {
        "no-shadow": "warn",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "prettier": "@wordpress/prettier-config",
                "useTabs": false,
                // "tabWidth": 4,
                "singleQuote": true,
                "jsxSingleQuote": true,
                "bracketSpacing": true,
                "arrowParens": "avoid"
            }
        ],
        "react/jsx-curly-newline": "off",
        "react/react-in-jsx-scope": "off",
        "no-underscore-dangle": "off",
        "no-nested-ternary": "off",
        "react/jsx-pascal-case": "off", // Temporary deactivate
        "react/prop-types": "off", // Temporary deactivate
        "react/jsx-props-no-spreading": "off", // Temporary deactivate
        "import/no-extraneous-dependencies": "off", // Temporary deactivate
        "import/first": "off", // Temporary deactivate
        "import/order": "off", // Needs to be organized
        "require-jsdoc": "off", // Temporary deactivate
        "jsdoc/require-param": "off", // Temporary deactivate
        "jsdoc/check-tag-names": "off" // Temporary deactivate
    }
}
